<wpf:BasicWindow x:Class="GrandMutus.Classic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:Aldentea.Wpf.Application;assembly=AldenteaWpfApplication"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Name="MainMenu" Grid.Row="0" HorizontalAlignment="Stretch">
            <MenuItem Header="ファイル(_F)" />
            <MenuItem Header="編集(_E)" />
            <MenuItem Header="曲リスト(_S)">
                <MenuItem Header="曲追加(_A)" />
            </MenuItem>
        </Menu>

        <DataGrid Grid.Row="1" HorizontalAlignment="Left" Height="314" Margin="25,53,0,0" VerticalAlignment="Top" Width="648"
                  ItemsSource="{Binding Path=Songs}" CanUserAddRows="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" MinWidth="100" Binding="{Binding Path=Title}" />
                <DataGridTextColumn Header="Artist" MinWidth="100" Binding="{Binding Path=Artist}" />
                <DataGridTextColumn Header="Title" MinWidth="100" Binding="{Binding Path=FileName}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1" Content="Save" HorizontalAlignment="Left" Margin="180,403,0,0" VerticalAlignment="Top" Width="75"
                Click="Button_Click"/>
        <Button Grid.Row="1" Content="Load" HorizontalAlignment="Left" Margin="280,403,0,0" VerticalAlignment="Top" Width="75"
                Click="ButtonLoad_Click"/>

    </Grid>
</wpf:BasicWindow>
