<Window x:Class="GrandMutus.Classic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="314" Margin="25,53,0,0" VerticalAlignment="Top" Width="648"
                  ItemsSource="{Binding Path=Songs}" CanUserAddRows="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" MinWidth="100" Binding="{Binding Path=Title}" />
                <DataGridTextColumn Header="Artist" MinWidth="100" Binding="{Binding Path=Artist}" />
                <DataGridTextColumn Header="Title" MinWidth="100" Binding="{Binding Path=FileName}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Save" HorizontalAlignment="Left" Margin="180,403,0,0" VerticalAlignment="Top" Width="75"
                Click="Button_Click"/>

    </Grid>
</Window>
